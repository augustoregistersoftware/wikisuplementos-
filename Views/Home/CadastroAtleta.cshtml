@model wikisuplementos.Models.AtletaModel
@{
    Layout = null; // Isso impedir√° que a view use qualquer layout compartilhado
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cadastro de Atleta - WikiSuplementos</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            width: 90%;
            max-width: 600px;
            background: white;
            padding: 2em;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 1em;
        }

        label {
            display: block;
            margin-bottom: 0.5em;
            font-weight: bold;
        }

        input[type="text"], textarea {
            width: 100%;
            padding: 0.5em;
            margin-bottom: 1em;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }

        textarea {
            resize: vertical;
            height: 100px;
        }

        button {
            width: 100%;
            padding: 0.7em;
            background-color: #28a745;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1em;
            cursor: pointer;
        }

        button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Cadastro de Atleta</h1>
        <form asp-action="CadastroAtleta" asp-controller="Atleta" method="post">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" type="text" required>

            <label asp-for="Descricao"></label>
            <input asp-for="Descricao" type="text" required>

            <label asp-for="LinkFoto"></label>
            <input asp-for="LinkFoto" type="text" required>

            <label asp-for="Uf"></label>
            <input asp-for="Uf" type="text" required>

            <label asp-for="TreinadorId"></label>
            <input asp-for="TreinadorId" type="text" required>

            <button type="submit">Cadastrar</button>
        </form>
    </div>

</body>
</html>
